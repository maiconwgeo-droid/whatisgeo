---
// src/components/ResearchCard.astro
const { title, description, href, status } = Astro.props;
---

<div class="group block p-6 bg-color-gray-7 border border-color-accent-high rounded-xl">
  <div class="flex justify-between items-start mb-5!">
    <h3 class="text-lg font-medium text-slate-900 dark:text-slate-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
      {title}
    </h3>
    {status && (
      <span class="text-[10px] font-bold uppercase tracking-wider px-2 py-0.5 bg-transparent text-accent-high border-2 border-color-accent-high rounded-full">
        {status}
      </span>
    )}
  </div>
  <p class="text-sm leading-snug! m-0!">
    {description}
  </p>
</div>